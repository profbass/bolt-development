{% extends 'partials/_content.twig' %}

{% block main %}


<section class="hero hero-image is-black is-bold is-large" {%- if record.image|default %} {% set filename = record.image.file|default(record.image) %} data-background-image="{{ asset(filename, 'files') }}" style="background-image: url({{ asset(filename, 'files') }})" {% endif -%}>
    <div class="hero-body">
        <div class="container has-text-centered">
            <h1 class="title">{{ record.title }}</h1>
        </div>
    </div>
</section>

<section class="section section-record">
    <div class="container">
        {# {% if record.image is not empty %}
            <figure class="image is-2by1">
                <img src="{{ record.image|image(1280, 660) }}" alt="{{ record.values.image.alt|default() }}"/>
                <figcaption>
                    {{ record.values.image.title|default() }}
                </figcaption>
            </figure>
        {% endif %} #}

        <div class="columns is-centered">
            <div class="column is-two-thirds">
                <article class="content" role="article">
                    <h1 class="title is-size-1 is-size-3-mobile">{{ record.title }}</h1>

                    {# {% include 'partials/_record_meta.twig' with {'extended': true} %} #}

                    {% with { 'record': record, 'extended': true, 'repeaters': true, 'blocks': true, 'exclude': ['imagelist','image'] } %}
                    {{ block('sub_fields', 'partials/_sub_fields.twig') }}
                    {% endwith %}

                    {{ include('partials/_recordfooter.twig', { 'record': record, 'extended': true }) }}
                </article>
            </div>
        </div>
    </div>
</section>
{# Image Gallery #}
<div class="container is-fluid">
    {% with { 'record': record, 'extended': true, 'repeaters': true, 'blocks': true, 'exclude': ['html','title','image'] } %}
    {{ block('sub_fields', 'partials/_sub_fields.twig') }}
    {% endwith %}
</div>



{% include "partials/_sub_recent_records.twig" %}{% endblock main %}

